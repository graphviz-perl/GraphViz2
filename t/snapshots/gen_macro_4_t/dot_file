'digraph Perl {
 graph [ label="Macro demo 4 - Linked cluster sub-graphs" rankdir="TB" ]
 node [ shape="oval" ]
 edge [ color="grey" ]

 subgraph "cluster 1" {
  graph [ label="cluster 1" rankdir="TB" ]
  node [ color="magenta" shape="diamond" ]
  edge [ color="grey" ]
  "Chadstone" [ shape="hexagon" ]
  "Waverley" [ color="orange" ]
  "Chadstone" -> "Waverley"
 }

 subgraph "cluster 2" {
  graph [ label="cluster 2" rankdir="TB" ]
  node [ color="magenta" shape="diamond" ]
  edge [ color="grey" ]
  "Hughesdale" [ shape="hexagon" ]
  "Notting Hill" [ color="orange" ]
  "Hughesdale" -> "Notting Hill"
 }
 "Chadstone" -> "Notting Hill" [ lhead="cluster 2" ltail="cluster 1" minlen="2" ]
}
'
